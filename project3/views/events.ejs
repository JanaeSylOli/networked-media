<html>
<head>
    <title>Challenges</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <nav>
        <a href="/">Home</a>
        <a href="/leaderboard">Leaderboard</a>
        <a href="/forum">Forum</a>
        <a href="/events">Events</a>
    </nav>

    <h2>🕵️‍♂️ Join a Challenge</h2>
    
    <form action="/events" method="POST" enctype="multipart/form-data">
        <textarea name="story" placeholder="Describe your best hiding experience..." required></textarea>
        <input type="file" name="image">
        <button type="submit">Enter</button>
    </form>

    <h2>🔥 Challenge Entries</h2>
    <section class="entries">
        <% challengeEntries.forEach(entry => { %>
            <div class="entry">
                <p><strong><%= entry.username %></strong> shared their hiding story:</p>
                <p><%= entry.story %></p>
                <% if (entry.image) { %>
                    <img src="<%= entry.image %>" alt="Entry Image">
                <% } %>
            </div>
        <% }) %>
    </section>
</body>
</html>