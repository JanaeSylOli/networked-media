<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Boogeyman's Hide & Seek</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <header>
        <h1>üëÅ Boogeyman‚Äôs Hide & Seek üëÅ</h1>
        <nav>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/forum">Forum</a></li>
                <li><a href="/rankings">Hall of Shadows</a></li>
                <li><a href="/events">Hide & Shriek Challenge</a></li>
                <li><a href="/login">Join the Shadows</a></li>
            </ul>
        </nav>
    </header>

    <main>
        <section class="hero">
            <h2>Welcome to the Shadows</h2>
            <p>A secret forum for creatures of the dark.</p>
            <a href="/register" class="btn">Join Now</a>
        </section>

        <section class="forum-preview">
            <h2>Featured Hiding Spots</h2>
            <div class="posts">
                <% posts.forEach(post => { %>
                    <div class="post">
                        <img src="<%= post.image %>" alt="Hiding Spot">
                        <h3><%= post.title %></h3>
                        <p><%= post.description %></p>
                        <a href="/post/<%= post.id %>">View More</a>
                    </div>
                <% }); %>
            </div>
        </section>

        <section class="hall-of-shadows">
            <h2>The Hall of Shadows</h2>
            <p>The top-ranked masters of lurking.</p>
            <table class="rankings">
                <thead>
                    <tr>
                        <th>Rank</th>
                        <th>Name</th>
                        <th>Points</th>
                    </tr>
                </thead>
                <tbody>
                    <% rankings.forEach((user, index) => { %>
                        <tr>
                            <td>#<%= index + 1 %></td>
                            <td><strong><%= user.name %></strong></td>
                            <td><%= user.points %> pts</td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </section>

        <section class="events">
            <h2>üé≠ Hide & Shriek Challenge</h2>
            <p>Vote for the best hiding spot of the year!</p>
            <ul>
                <% events.forEach(event => { %>
                    <li>
                        <strong><%= event.title %></strong> - <%= event.description %>
                        <a href="/event/<%= event.id %>">View Details</a>
                    </li>
                <% }); %>
            </ul>
        </section>

        <section class="login">
            <h2>üîë Enter the Shadows</h2>
            <form action="/login" method="POST">
                <label for="username">Username:</label>
                <input type="text" id="username" name="username" required>
                
                <label for="password">Password:</label>
                <input type="password" id="password" name="password" required>
                
                <button type="submit">Login</button>
            </form>
            <p>New to the darkness? <a href="/register">Register here</a></p>
        </section>
    </main>

    <footer>
        <p>&copy; 2025 Boogeyman‚Äôs Hide & Seek | Lurking since forever</p>
    </footer>
</body>
</html>