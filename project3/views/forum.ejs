<html>
    <head>
        <title>Shadow Talk</title>
        <link href="/styles.css" rel="stylesheet">
    </head>
    <body>
        <nav>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/leaderboard">Leaderboard</a></li>
                <li><a href="/events">Events & Prizes</a></li>
                <li><a href="/forum">üí¨ Shadow Talk</a></li>
            </ul>
        </nav>

        <header>
            <h1>üí¨ Shadow Talk</h1>
            <p>Share your best hiding spots, encounters, and scary stories!</p>
        </header>

        <!-- Forum Submission Form -->
        <section class="form-container">
            <h2>Post Your Hiding Story</h2>
            <form method="POST" action="/submit">
                <input type="text" name="username" placeholder="Your Shadow Name">
                <textarea name="message" placeholder="Share your hiding experience..."></textarea>
                <button type="submit" class="submit-button">Submit</button>
            </form>
        </section>

        <!-- Display Forum Posts with Voting -->
        <section class="posts">
            <h2>Latest Hiding Stories</h2>
            <% allPosts.forEach(post => { %>
                <div class="post-item">
                    <div class="post-header">
                        <strong><%= post.username %></strong> - <span><%= post.date %></span>
                    </div>
                    <p class="post-text"><%= post.message %></p>
                    <div class="vote-section">
                        <form method="POST" action="/upvote/<%= post.id %>">
                            <button type="submit" class="vote-button">üëç Upvote (<%= post.votes %>)</button>
                        </form>
                    </div>
                </div>
            <% }); %>
        </section>

        <script src="/script.js"></script>
    </body>
</html>
