<html>
<head>
    <title>Forum</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <nav>
        <a href="/">Home</a>
        <a href="/leaderboard">Leaderboard</a>
        <a href="/forum">Forum</a>
        <a href="/events">Events</a>
    </nav>

    <h2>ğŸ’¬ Shadow Talk Forum</h2>

    <form action="/forum" method="POST" enctype="multipart/form-data">
        <input type="text" name="title" placeholder="Post Title" required>
        <textarea name="textMessage" placeholder="Share your hiding story..." required></textarea>
        <input type="file" name="image">
        <button type="submit">Submit</button>
    </form>

    <h2>ğŸ“¢ Latest Posts</h2>
    <section class="posts">
        <h2>Latest Hiding Stories</h2>
        <ul>
            <% allPosts.forEach(post => { %>
                <li class="post-item">
                    <strong><%= post.username %></strong> - <span><%= post.date %></span>
                    <p><%= post.message %></p>
                    <p>Upvotes: <%= post.upvotes %></p>
                    <form action="/upvote/<%= post.id %>" method="POST">
                        <button type="submit">ğŸ‘ Upvote (<%= post.upvotes %>)</button>
                    </form>
                </li>
            <% }) %>
        </ul>
    </section>
</body>
</html>