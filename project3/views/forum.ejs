<html>
<head>
    <title>Forum - Boogeyman‚Äôs Hide & Seek</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="fog-container">
        <div class="fog"></div>
    </div>
    
    <nav>
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/forum">Forum</a></li>
            <li><a href="/challenges">Challenges</a></li>
            <li><a href="/leaderboard">Leaderboard</a></li>
        </ul>
    </nav>

    <h1>üó£Ô∏è Full Scare Stories Forum</h1>

    <% if (error) { %>
        <p class="error"><%= error %></p>
    <% } %>

    <ul>
        <% forumPosts.forEach(post => { %>
            <li>
                <strong><%= post.username %></strong>: <%= post.text %> - <strong><%= post.votes %> votes</strong>
                <form action="/vote-forum" method="POST">
                    <input type="hidden" name="postId" value="<%= post.id %>">
                    <button type="submit">Upvote</button>
                </form>
            </li>
        <% }) %>
    </ul>

    <h2>Submit Your Scariest Story</h2>
    <form action="/forum" method="POST">
        <input type="text" name="username" placeholder="Your Name" required>
        <textarea name="postText" placeholder="Tell your scary story..." required></textarea>
        <button type="submit">Submit</button>
    </form>
</body>
</html>
