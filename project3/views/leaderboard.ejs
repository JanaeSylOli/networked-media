<html lang="en">
<head>
    <link rel="stylesheet" href="/styles.css">
    <title>Leaderboard</title>
</head>
<body>
    <nav>
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/forum">Forum</a></li>
            <li><a href="/challenges">Challenges</a></li>
            <li><a href="/leaderboard">Leaderboard</a></li>
        </ul>
    </nav>

    <h1>Leaderboard</h1>

    <h2>Top Scary Stories</h2>
    <ul>
        <% sortedForum.forEach(story => { %>
            <li>
                <img src="<%= story.image %>" width="100">
                <strong><%= story.username %></strong>: <%= story.story %> (Votes: <%= story.votes %>)
            </li>
        <% }); %>
    </ul>

    <h2>Top Challenge Entries</h2>
    <ul>
        <% sortedChallenges.forEach(entry => { %>
            <li>
                <img src="<%= entry.image %>" width="150">
                <strong><%= entry.username %></strong> entered <%= entry.challengeName %> (Votes: <%= entry.votes %>)
            </li>
        <% }); %>
    </ul>
</body>
</html>
