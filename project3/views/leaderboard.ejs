<html>
<head>
    <title>Leaderboard - Boogeyman‚Äôs Hide & Seek</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <nav>
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/forum">Forum</a></li>
            <li><a href="/challenges">Challenges</a></li>
            <li><a href="/leaderboard">Leaderboard</a></li>
        </ul>
    </nav>

    <h1>üèÜ Leaderboard</h1>

    <h2>Top Scare Stories</h2>
    <ul>
        <% leaderboard.filter(entry => entry.text).forEach(entry => { %>
            <li>
                <strong><%= entry.username %></strong>: <%= entry.text %> - <strong><%= entry.votes %> votes</strong>
            </li>
        <% }) %>
    </ul>

    <h2>Top Challenge Entries</h2>
    <ul>
        <% leaderboard.filter(entry => entry.spot).forEach(entry => { %>
            <li>
                <strong><%= entry.username %></strong>: <%= entry.spot %>
                <img src="<%= entry.imageUrl %>" alt="Hiding Spot" width="200">
                <strong><%= entry.votes %> votes</strong>
            </li>
        <% }) %>
    </ul>
</body>
</html>
