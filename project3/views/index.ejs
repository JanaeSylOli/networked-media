<html>
<head>
    <title>Boogeyman‚Äôs Hide & Seek</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="fog-container">
        <div class="fog"></div>
    </div>
    
    <nav>
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/forum">Forum</a></li>
            <li><a href="/challenges">Challenges</a></li>
            <li><a href="/leaderboard">Leaderboard</a></li>
        </ul>
    </nav>

    <header class="hero-banner">
        <h1>So you think you can scare?</h1>
    </header>

    <section>
        <h2>üó£Ô∏è Latest Scare Stories</h2>
        <ul>
            <% latestForumPosts.forEach(post => { %>
                <li>
                    <strong><%= post.username %></strong>: <%= post.text %> - <strong><%= post.votes %> votes</strong>
                    <form action="/vote-forum" method="POST">
                        <input type="hidden" name="postId" value="<%= post.id %>">
                        <button type="submit">Upvote</button>
                    </form>
                </li>
            <% }) %>
        </ul>
        <a href="/forum" class="more-btn">More Forum Entries</a>
    </section>

    <section>
        <h2>üé≠ Latest Challenge Entry</h2>
        <% if (latestChallenge) { %>
            <div class="challenge-box">
                <h3><%= latestChallenge.title %></h3>
                <a href="/challenges">View Challenges</a>
            </div>
        <% } else { %>
            <p>No challenge entries yet.</p>
        <% } %>
    </section>

    <div class="fog-container">
        <div class="fog"></div>
    </div>

    <script src="/js/script.js"></script>
</body>
</html>
