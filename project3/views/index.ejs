<html>
<head>
    <title>Boogeyman's Hide & Seek</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>

    <nav>
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/leaderboard">Leaderboard</a></li>
            <li><a href="/events">Events & Prizes</a></li>
            <li><a href="/shadow-talk">Shadow Talk</a></li>
        </ul>
    </nav>

    <header>
        <h1>Boogeyman's Hide & Seek</h1>
        <p>Join the ultimate forum for creatures of the dark!</p>
    </header>

    <section class="challenges">
        <h2>Current Challenges & Prizes</h2>
        <div class="challenge-list">
            <% challenges.forEach(challenge => { %>
                <a href="/challenge/<%= challenge.id %>" class="challenge-box">
                    <strong><%= challenge.name %></strong>
                    <p>Prize: <%= challenge.prize %></p>
                </a>
            <% }); %>
        </div>
    </section>

    <section class="posts">
        <h2>Latest Hiding Spots & Stories</h2>
        <% posts.forEach((post, index) => { %>
            <div class="post-item">
                <div class="post-header">
                    <strong><%= post.username %></strong> - <span><%= post.date %></span>
                </div>
                <p><%= post.message %></p>
                <form action="/upvote" method="post">
                    <input type="hidden" name="postIndex" value="<%= index %>">
                    <button type="submit" class="upvote-button">⬆️ Upvote (<%= post.votes %>)</button>
                </form>
            </div>
        <% }); %>
    </section>
</body>
</html>
