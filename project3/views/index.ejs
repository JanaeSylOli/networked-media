<html>
<head>
    <title>Welcome to Shadow Talk</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <nav>
        <a href="/">Home</a>
        <a href="/leaderboard">Leaderboard</a>
        <a href="/forum">Forum</a>
        <a href="/events">Events</a>
    </nav>

    <section class="hero">
        <h2>Welcome, <%= username %> 👻</h2>
        <p>Think you can be the best at hiding?</p>
        <a href="/events" class="cta">Join a Challenge</a>
    </section>

    <h2>🏆 Leaderboard</h2>
    <ul>
        <% leaderboard.forEach(user => { %>
            <li><strong><%= user.username %></strong> - <%= user.score %> pts</li>
        <% }) %>
    </ul>

    <h2>📢 Latest Hiding Spots</h2>
    <section class="posts">
        <% posts.forEach(post => { %>
            <div class="post">
                <h3><%= post.title %></h3>
                <p><strong><%= post.username %></strong> - <%= post.date %></p>
                <p><%= post.message %></p>
                <% if (post.image) { %>
                    <img src="<%= post.image %>" alt="Hiding Spot">
                <% } %>
                <form action="/upvote/<%= post.id %>" method="POST">
                    <button type="submit">👍 Upvote (<%= post.votes %>)</button>
                </form>
            </div>
        <% }) %>
    </section>
</body>
</html>